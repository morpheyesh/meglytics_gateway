## Tweak this systemd script
[Unit]
Description=Megam Gateway - REST API
After=network.target
After=runlevel2.target
After=runlevel3.target
After=runlevel4.target
After=runlevel5.target
[Service]
ExecStart=/usr/share/megam/megamgateway/bin/megamgateway -Dlogger.file=/var/lib/megam/megamgateway/logger.xml -Dconfig.file=/var/lib/megam/megamgateway/gateway.conf
KillMode=mixed
